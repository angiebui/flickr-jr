<div class="container">
  <h2><%= @album.title %>: Photos</h2>
  <p>Author: <a href="/user/<%=@album.user_id%>/albums"><%= @album.user.name %></a><p>
  <div class="add-to-set">
    <form action='/album/<%=@album.id%>' method="post" enctype="multipart/form-data">
      <ul>
        <%= erb :_photo_upload, :layout => false %>
        <button id="plus-photo" type="button"> + </button><br><br>
        <input type="submit" value="Upload">
      </ul>
    </form>
  </div>
  <div class="images">
    <% @photos.each do |photo| %>
     <li><img src="/../<%=photo.filename%>"></li>
    <% end %>
  </div>
</div>